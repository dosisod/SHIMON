{
  "compilerOptions": {
    "target": "ESNEXT",
    "lib": ["ES2015", "dom"],
    "module": "none",
    "outDir": "SHIMON/static/js/",
    "rootDir": "src/ts/",

    "strictNullChecks": false,
    "baseUrl": "./",
    "esModuleInterop": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/ts/*"
  ]
}
